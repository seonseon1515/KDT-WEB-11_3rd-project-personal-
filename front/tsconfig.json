// tsconfig.json

{
  "compilerOptions": {
      "types": [],
      "lib": [
      "ES2019",
      "ES2020.String",
      "DOM",
      "DOM.Iterable"
      ],
      "noImplicitAny": true,
      "noImplicitOverride": true,
      "strict": true,
      "module": "es6",
      "target": "es2019",
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
      "node_modules/**/*"
  ]
}
